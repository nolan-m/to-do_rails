<h1>New Task</h1>

<% if @task.errors.any? %>
  <ul>
  <% @task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<form action="/tasks" method="post">
  <label for="task_name">Name:</label>
  <input for="task_name" name="name" type="text">
  <button>Create Task</button>
</form>
