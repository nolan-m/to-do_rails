<h1>Edit list</h1>

<% if @list.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/lists/<%= @list.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="list_name">Name</label>
  <input id="list_name" name="name" type="text" value="<%= @list.name %>">
  <input name="_method" type="hidden" value="patch">
  <input name="status" type="hidden" value="false">
  <button>Update list</button>
</form>

<a href="/lists/<%= @list.id %>"
   data-confirm="You sure?"
   data-method="delete"
   rel="nofollow">Delete</a>
